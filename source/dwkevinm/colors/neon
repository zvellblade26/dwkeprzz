static const char fg_norm[] = "#00ffcc"; // Neon teal for normal text
static const char bg_norm[] = "#1a1a1a"; // Deep black for normal background
static const char border_norm[] = "#ff00ff"; // Neon magenta for normal border

static const char fg_sel[] = "#ffff00"; // Neon yellow for selected text
static const char bg_sel[] = "#3300ff"; // Bright neon blue for selected background
static const char border_sel[] = "#ff007f"; // Neon pink for selected border

static const char fg_title[] = "#ff00ff"; // Neon magenta for title text
static const char bg_title[] = "#1a1a1a"; // Deep black for title background
static const char border_title[] = "#00ff00"; // Bright neon green for title border

static const char *colors[][3] = {
[SchemeNorm]  = { fg_norm, bg_norm, border_norm },
[SchemeSel]   = { fg_sel, bg_sel, border_sel },
[SchemeTitle] = { fg_title, bg_title, border_title },
};
